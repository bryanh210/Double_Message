<h2 class="center"><img src="{{user.pictureURL}}" /> Logged in as {{user.username}}</h2>
<h3>Contacts</h3>
<table class="table table-hover">
  <thead>
    <td><b>Name</b></td>
    <td><b>Phone</b></td>
    <td><b>Actions</b></td>
  </thead>
  <tbody>
{{#each contacts}}
  <tr>
    <td>{{name}}</td>
    <td>{{phone}}</td>
    <td><a class="btn btn-default" href="/contacts/{{_id}}">Edit contact</a></td>
    <td><a class="btn btn-primary" href="/messages/{{_id}}">Open chat</a></td>
    <td><a class="btn btn-primary" href="/messages/send/{{_id}}">Send message</a></td>
  </tr>
{{/each}}
  </tbody>
</table>
<a class="btn btn-primary" href="/contacts/new">Create new contact</a>
<a class="btn btn-primary" href="/messages">View all messages</a>
<a class="btn btn-primary btn-danger" href="/logout">Logout</a>
